{
    "name": "bnock/elasticsearch-php",
    "description": "An Elasticsearch wrapper in PHP",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Bradford Nock",
            "email": "bradford.nock@gmail.com"
        }
    ],
    "require": {
        "php": "^8.3",
        "illuminate/collections": "^11.23",
        "elasticsearch/elasticsearch": "^8.15"
    },
    "require-dev": {
        "pestphp/pest": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "BNock\\ElasticsearchPHP\\": "src/"
        }
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true,
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "test": "pest"
    }
}
